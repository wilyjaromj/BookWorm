@using BookWorm.Data
@model IEnumerable<Book>
@{ 
    Layout = null;
}

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Rating
            </th>
            <th>
                View
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model)
        {
            <tr>
                <td>
                    @book.Title
                </td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Rating
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Book" asp-route-id="@book.Id">View Book</a>
                </td>
            </tr>
        }
    </tbody>
</table>